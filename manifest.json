{
  "name": "RefreshAlert",
  "description": "Tells you when you page finishes refreshing",
  "version": "0.1",

  "background": {
    "persistent": true,
    "scripts": [ "background.js", "browser.js" ]
  },

  "icons": {
    "32": "refresh.png",
    "128": "refresh.png"
  },

  "browser_action": {
      "default_popup": "browser.html",
      "default_icon": {
          "32": "refresh.png"
      }
  },

  "permissions": [ "tabs", "notifications" ],

  "manifest_version": 2

}
